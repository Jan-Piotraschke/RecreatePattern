<LightProperties>:
    # The Canvas is the root object used for DRAWING
    canvas:
        Color:
            rgba: self.r, .3, .4, .95
        Rectangle:
            pos: self.pos
            size: self.size

    # Print a text to the console
    on_release:
        print("Sehr gut")


